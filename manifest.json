{
  "manifest_version": 2,
  "name": "To Caret, From Github",
  "short_name": "GH2Caret",
  "description": "A demo plugin that sends Github source to a new Caret tab.",
  "version": "1.0",
  
  "permissions": [
    "https://github.com/*",
    "https://raw.github.com/*",
    "tabs"
  ],
  "page_action": {
    "default_icon": "icon-128.png",
    "default_title": "Send file to Caret"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [ "background.js" ]
  }
}